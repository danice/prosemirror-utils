{
    "compilerOptions": {
      "target": "es2022",
      "incremental": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "outDir": "./build",
      "sourceMap": true,
      "declaration": true,
      "composite": true,  
      "noImplicitAny": false,  
      "forceConsistentCasingInFileNames": true,
    },  
    "include": [
      "./src/*",
    ]
}